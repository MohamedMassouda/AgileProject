generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  name         String
  password     String
  role         Role          @default(MEMBER)
  imageUrl     String?
  member       Member?
  sponsor      Sponsor?
  officeMember OfficeMember?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Member {
  userId String @id @unique
  user   User   @relation(fields: [userId], references: [id])

  events Event[] @relation("EventAttendees")
}

model Sponsor {
  userId String  @id @unique
  user   User    @relation(fields: [userId], references: [id])
  events Event[]
}

model OfficeMember {
  userId         String  @id @unique
  user           User    @relation(fields: [userId], references: [id])
  approvedEvents Event[]
}

model Event {
  id             String       @id @default(cuid())
  title          String
  description    String
  date           DateTime
  location       String
  host           Sponsor      @relation(fields: [hostId], references: [userId])
  hostId         String
  approvedBy     OfficeMember @relation(fields: [officeMemberId], references: [userId])
  isApproved     Boolean
  officeMemberId String
  attendees      Member[]     @relation("EventAttendees")
  categories     Category[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

enum Role {
  MEMBER
  OFFICE
  SPONSOR
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  events    Event[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
