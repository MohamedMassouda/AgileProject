generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      Role     @default(MEMBER)
  events    Event[]  @relation("EventAttendees")
  profile   Profile?
  profileId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id          String     @id @default(cuid())
  title       String
  description String
  date        DateTime
  location    String
  attendees   User[]     @relation("EventAttendees")
  categories  Category[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum Role {
  MEMBER
  OFFICE
  SPONSOR
}

model Profile {
  id       String  @id @default(cuid())
  userId   String  @unique
  bio      String?
  imageUrl String?
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        String   @id @default(cuid())
  name      String
  events    Event[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
